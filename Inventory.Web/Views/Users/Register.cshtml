@model Inventory.ArqLimpia.BL.DTOs.RegisterUserInputDTO

@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/css/RegisterStyle.css">
</head>

<body>
    <div class="Form-Register">
        <h1 class="title">Registrate!</h1>
    <div class="theme"></div>
    <form>
        <div class="form-group">
            <input placeholder=" " type="text" id="firstName" name="firstName" required>
             <label for="firstName">Nombre:</label>
        </div>

        <div class="form-group">
            <input type="text" id="surname" name="surname" required placeholder=" ">
            <label for="surname">Apellido:</label>
        </div>

        <div class="form-group">
            <input placeholder=" " type="email" id="email" name="email" required>
             <label for="email">Email:</label>
        </div>

        <div class="form-group">
            <input placeholder=" " type="password" id="password" name="password" required>
            <label for="password">Contraseña:</label>
        </div>
        <div class="form-group-date">
            <input type="date" id="dateOfBirth" name="dateOfBirth" required>
            <label for="dateOfBirth">Fecha de Nacimiento:</label>
        </div>
        
        <div class="form-group-button">
            <button class="button-add" type="submit">Registrarse</button>
            <button class="button-cancel"  type="submit">Inicias Sesion</button>
        </div>

    </form>
    <img src="~/assets/images/imagenRegister.jpg"/>
    </div>
</body>

