@model Inventory.ArqLimpia.BL.DTOs.UpdateProductsInputDTOs

@{
    ViewData["Title"] = "Edit";
}


<div class="card">
    <div class="card-header">
        Edit Product
    </div>
    <div class="card-body">

        <form asp-action="Edit" asp-controller="Product" method="post">

            <input asp-for="ProductId" type="hidden" class="form-control" /> 
            <div class="mb-3">
                <label class="form-label">Product Name</label>
                <input asp-for="ProductName" type="text" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>

                <div class="mb-3">
                    <label for="exampleFormControlFile1">Image</label>
                    <input type="file" name="ImageFile" class="form-control-file" id="exampleFormControlFile1">
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Price</label>
                    <input asp-for="Price" type="text" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Stock</label>
                    <input asp-for="Stock" type="text" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary"><i class="bi bi-download"></i>support</button>
                <a asp-action="Index" asp-controller="Product" class="btn btn-warning"><i class="bi bi-arrow-left"></i>Back to the list</a>
        </form>

    </div>
</div>

