@model IEnumerable<Inventory.ArqLimpia.BL.DTOs.FindOneProductsOutputDTOs>

@{
    ViewData["Title"] = "Index";
    Layout="~/Views/Shared/_LayoutProduct.cshtml";
}

<h1>Index</h1>

<p>

    <a asp-action="Create" asp-controller="Product" class="btn btn-warning"><i class="bi bi-arrow-left"></i>Create new product</a>
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <img width="250" height="150" src="http://localhost:5275/images/@item.ImageUrl" />
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"><strong>@item.Price.ToString("C")</strong></p>
                    <p class="card-text"><strong>Stock: </strong>@item.Stock</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View details</a>
                    <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-arrow-left"></i>Edit</a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-arrow-left"></i>Delete</a>
                </div>
            </div>
        </div>
    }
</div>